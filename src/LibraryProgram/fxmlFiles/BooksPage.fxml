<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="booksPageBorderPane"  stylesheets="@../Css/BookPageCss.css" minWidth="1550"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LibraryProgram.BooksPageController">

    <left>
        <VBox alignment="TOP_CENTER" prefHeight="1000.0" prefWidth="335.0" spacing="10">
            <Button fx:id="homePage" onAction="#navigation" prefHeight="70" prefWidth="200" text="Back" />
            <ImageView fitHeight="350" fitWidth="350" translateY="350">
                <Image url="@../../resources/Vision.png" />
            </ImageView>
            <padding>
                <Insets left="15" right="10" top="10" />
            </padding>
        </VBox>
    </left>
    <padding>
        <Insets right="10" />
    </padding>
    <center>
        <VBox>
            <ScrollPane fx:id="sectionScrollPane" minHeight="1000" >
                <GridPane fx:id="sectionGridPane" hgap="30"  vgap="25" minHeight="1000" minWidth="1410">
                    <padding>
                        <Insets left="10" top="10" />
                    </padding>
                    <Button fx:id="addButton" onAction="#addButtonPressed" prefHeight="70" prefWidth="200" text=" + " textAlignment="CENTER" />
                    <columnConstraints>
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </ScrollPane>
        </VBox>
    </center>




</BorderPane>
