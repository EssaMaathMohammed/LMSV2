<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane fx:id="statisticsBorderPane" prefHeight="674.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LibraryProgram.StatisticsPageController">


    <top>
        <HBox prefHeight="0.0" prefWidth="1000.0">
            <Label fx:id="labelName" text="Statistics Page Name" />
            <Button onAction="#homePageButtonClicked" text="Home Page" />
        </HBox>
    </top>

    <padding>
        <Insets bottom="10" left="20" right="10" />
    </padding>
    <left>
        <VBox prefHeight="1000" prefWidth="500">
            <TableView fx:id="statisticsTableView" minHeight="613" minWidth="477" prefHeight="613.0" prefWidth="477.0">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="325.60000002384186" text="Book Name" />
                    <TableColumn fx:id="timesBorrowed" prefWidth="172.0" text="Times Borrowed" />
                </columns>
            </TableView>
        </VBox>
    </left>

    <center>
        <GridPane vgap="20" hgap="20" minWidth="200" minHeight="300">
            <Label text="Total Books" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="numberOfBooks" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        </GridPane>
    </center>
</BorderPane>
